<% if signed_in? %>
  <%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :body, "Comments", class: "sr-only" %><br>
    <%= f.text_area :body, autofocus: true, placeholder:"Put your comments here" %>
  </p>

  <p>
    <div class="rating"></div>
  </p>
  
  <p>
    <%= f.submit "Submit", class: "btn btn-success"  %>
  </p>
  <% end %>
  <% end %>
