<!DOCTYPE html>
<html>
<head>
  <title>APP1</title>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Navigation  -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container" id="nav">
    <!-- Brand and toggle get grouped for better mobile display-->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a><%= link_to image_tag("appletext.png", :alt => "apple"), root_path, class: "navbar-brand nav-link" %></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", static_pages_index_path, class: "nav-link" %></li>
        <li><%= link_to "About", static_pages_about_path, class: "nav-link" %></li>
        <li><%= link_to "Products", root_path, class: "nav-link" %></li>
        <li><%= link_to "Contact", static_pages_contact_path, class: "nav-link" %></li>
        <li><% if user_signed_in? %><%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %><%= link_to('Login', new_user_session_path,) %>
            <% end %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>  
      
      <form action="/products" accept-charset="UTF-8" method="get" class="navbar-form navbar-right field">
          <%= form_tag("/products", method: "get") do %>
          <%= label_tag(:q, "Search for:", id:'search') %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search", class: "btn btn-default searchbtn" ) %>
          <%end%>
      </form>
    </div>
  </div><!-- /.container-fluid -->
</nav>
<!-- alert notice -->
  <% if alert %>
    <div class="container">
      <div class="row">
        <div class=".col-xs-6 .col-md-4">
          <p class="alert alert-danger" role="alert"><%= alert %></p>
        </div>
      </div>
    </div>
  <% end %>
<!--   jquery script for alert notice -->
  <script type="text/javascript">$(document).ready( function() {
    $('.alert').delay(5000).fadeOut(2000);
  });</script>

<%= yield %>
<!-- footer -->
<div class="site-footer">
  <p>&copy; 2015 Sarah</p>
</div>


</body>
</html>
